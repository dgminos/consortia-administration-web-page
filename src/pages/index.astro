---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import FeatureCard from '../components/FeatureCard.astro';
import city from '../assets/img/city.webp';


const features = [
  {
    title: "Feature 1",
    description: "Discover how our first feature can revolutionize your workflow."
  },
  {
    title: "Feature 2",
    description: "Learn about our second feature that sets us apart from the competition."
  },
  {
    title: "Feature 3",
    description: "Explore our third feature designed to enhance your productivity."
  }
];
---

<Layout title="Administración">
  <Banner 
    title="Welcome to <span class='text-gradient'>Our Amazing Product</span>"
    subtitle="Experience the future of technology with our innovative solution.<br><strong>Explore our features and transform your digital experience.</strong>"
    image={city}
    imageAlt="Vista aérea de una ciudad"
  />

  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-8 mb-12">
      {features.map(feature => (
        <FeatureCard title={feature.title} description={feature.description} />
      ))}
    </div>
  </div>
</Layout>

