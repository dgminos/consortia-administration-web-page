---
import Layout from '../layouts/Layout.astro';
import { Picture } from 'astro:assets';
import manCalculatorHouse from '../assets/img/manCalculatorHouse.webp';
import buildingBalcony from '../assets/img/buildingBalcony.webp';
---

<Layout title="Sobre nosotros">
    <div class="flex flex-col items-center animate-fadeIn">
      <div class="relative w-full h-[30vh] md:h-[40vh] overflow-hidden mb-16">
        <Picture 
        src={buildingBalcony} 
        formats={['avif', 'webp']}
        alt="Edificio con balcones"
        width={1920}
        height={1080}
        class="w-full h-full object-cover object-center brightness-75"
      />
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"></div>
        <h1 class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-3xl md:text-4xl font-bold text-white px-6 py-3 rounded-lg shadow-lg text-center">
          Administraci√≥n
        </h1>
      </div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center space-y-12 max-w-6xl mb-24">
        <div class="w-full flex flex-col md:flex-row items-center md:items-start gap-8">
          <div class="w-full md:w-1/3 flex justify-center">
            <Picture
            src={manCalculatorHouse}
            formats={['avif', 'webp']}
            alt="Un hombre de traje sosteniendo una casa de juguete, usando una calculadora sobre un escritorio con una libreta y lapiceras"
            width={300}
            height={300}
            class="rounded-lg shadow-md"
          />
