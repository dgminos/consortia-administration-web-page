---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="flex-1 bg-white dark:bg-dark-bg p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 ease-in-out
            dark:border dark:border-white/10 dark:hover:border-white/30 dark:hover:shadow-white/10">
  <h2 class="text-xl font-semibold mb-4 text-secondary dark:text-dark-secondary">{title}</h2>
  <p class="text-text dark:text-dark-text">{description}</p>
</div>

<style>
  .dark .flex-1:hover {
    box-shadow: 0 0 15px 0 rgba(255, 255, 255, 0.1);
  }
</style>

